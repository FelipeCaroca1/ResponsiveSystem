{
  "name": "responsive-system",
  "version": "1.6.1",
  "description": "Sistema de layout responsivo con auto-scaling para Tailwind CSS",
  "type": "module",
  "main": "./dist/responsive-system.cjs",
  "module": "./dist/responsive-system.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "responsive-system-setup": "./scripts/postinstall.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/responsive-system.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/responsive-system.cjs"
      }
    },
    "./plugin": {
      "types": "./src/plugin/responsiveScalePlugin.d.ts",
      "default": "./src/plugin/responsiveScalePlugin.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*.mjs",
    "dist/**/*.cjs",
    "dist/**/*.d.ts",
    "dist/**/*.map",
    "src",
    "src/plugin",
    "scripts",
    "README.md"
  ],
  "keywords": [
    "responsive",
    "layout",
    "tailwind",
    "react",
    "typescript",
    "auto-scaling",
    "breakpoints"
  ],
  "author": "Felipe Caroca",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FelipeCaroca1/responsive-system.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.build.json && node scripts/copy-types.js && vite build && node scripts/generate-types.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "test:postinstall": "node scripts/test-postinstall.js"
  },
  "dependencies": {
    "tailwindcss": "^4.1.14",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21",
    "typescript": "~5.9.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.7.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "vite-plugin-dts": "^4.3.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
