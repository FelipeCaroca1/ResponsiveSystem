{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist",
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/pages/**/*",
    "src/components/ResponsiveDemo.tsx",
    "src/App.tsx",
    "src/main.tsx"
  ]
}

